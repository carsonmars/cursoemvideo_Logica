algoritmo "Entrada e Saída de dados"
// Algoritmo que recebe dados e mostra na tela
var
   nome:caractere
   salario:real
inicio
   // Primeira parte - entrada de dados
   Escreva("Nome do Funcionário(a): ")
   Leia(nome)
   Escreva("Salário: ")
   Leia(salario)
   Escreva("O(A) funcionário(a) ", nome, " tem um salário de R$ ", salario,".")
fimalgoritmo